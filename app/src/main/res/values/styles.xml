    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txtsize_headline</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txtsize_title</item>
    </style>

    <style name="TextViewSubhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txtsize_subhead</item>
    </style>

    <style name="TextViewBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/txtsize_body</item>
    </style>

    <style name="TextViewCaption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_light_gray</item>
        <item name="android:textSize">@dimen/txtsize_caption</item>
    </style>

    <style name="ListViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="ListViewLineDivider" parent="ListViewCommon">
        <item name="android:divider">@color/divider_gray</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="RadioButtonBottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/txtcolor_gray2oran_sel</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="RadioButtonStatusDetailTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/txtsize_subhead</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/layerlist_tab_indicator_sel</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GridViewImages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numColumns">3</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--SplashActivity-->
    <style name="FullWindowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="UserActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--MainActivity-->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>


    <!--Toolbar 样式-->
    <style name="ToolbarStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!--TabLayout-->
    <style name="MyTabLayoutTextAppearance"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 设置ActionBar菜单字体 -->
    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="actionBarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
        <!--<item name="actionBarTheme">@style/actionBarTheme</item>-->
        <!--<item name="actionBarPopupTheme">@style/actionBarPopupTheme</item>-->
    </style>

    <!-- 图片详情页，长按的动画 -->
    <style name="image_option_pop_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/home_image_detail_list_pop_window_in</item>
        <item name="android:windowExitAnimation">@anim/home_image_detail_list_pop_window_out</item>
    </style>

</resources>
